<p style="color: green"><%= notice %></p>

<h1>Products#index</h1>

<div id="products">
  <% @resources.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

<% if @api_products.present? && @api_products.success? %>
<table class="table table-stripped table-hover">
  <tbody>
    <% @api_products.body.each do |product| %>
      <tr>
        <th><%= product.id %></th>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


<% if admin_signed_in? %>
  <%= link_to "New #{@resource_class.model_name.human}",
              eval(["new", "backoffice", @resource_class.model_name.singular, "path"].join("_")),
              class: "btn btn-sm btn-dark" %>

<% end %>