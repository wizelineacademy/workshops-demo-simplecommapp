<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @resources.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

<% if admin_signed_in? %>
  <%= link_to "New #{@resource_class.model_name.human}",
              eval(["new", "backoffice", @resource_class.model_name.singular, "path"].join("_")),
              class: "btn btn-sm btn-dark" %>

<% end %>